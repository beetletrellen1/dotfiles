[general]
accounts = legacy, thoughtbot, fastmail
pythonfile = ~/.offlineimap/config.py
maxsyncaccounts = 3

[Account legacy]
localrepository = legacy-local
remoterepository = legacy-remote
synclabels = yes
labelsheader = X-Keywords
autorefresh = 0.5

[Repository legacy-local]
type = GmailMaildir
localfolders = ~/mail/legacy
nametrans = local_folder_to_gmail_folder

[Repository legacy-remote]
type = Gmail
holdconnectionopen = yes
keepalive = 60
maxconnections = 3
realdelete = no
