defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account fastmail
from me@ericj.co
user me@ericj.co
passwordeval pass mail/fastmail-laptop | head -1

account personal
from tabfugnic@gmail.com
user tabfugnic@gmail.com
passwordeval pass mail/personal | head -1

account thoughtbot
from eric@thoughtbot.com
user eric@thoughtbot.com
passwordeval pass thoughtbot/gmail | head -1
